<DATA>
	<params>
		<type>div</type>
	</params>
	<span class="undo toolbarButton" tooltip="Apply the current layout">
		<onClick>
			<command>tab</command>
			<form>cardlistform</form>
			<activeTab>1</activeTab>
		</onClick>
	</span>
	<div id="cardsFormContainer">
		<onInit>
			<command>navigate</command>
			<container>cardsFormContainer</container>
			<form>cardsForm</form>
		</onInit>
		<form id="cardsForm">
 			<params>
				<type>cardsGrid</type>
				<backend>CardsNavigation</backend>
				<nRows>9</nRows>
				<hookParent>true</hookParent>
			</params>
				<onChange>
					<command>selectNode</command>
					<node>$cardsForm.id</node>
				</onChange>
				<onDblClick>
					<command>zoomOn</command>
					<node>$cardsForm.id</node>
				</onDblClick>
			<rowButton id="zoom" tooltip="Zoom on Card">
				<onClick>
					<command>zoomOn</command>
					<node>$cardsForm.id</node>
				</onClick>
			</rowButton>
		</form>
	</div>
</DATA>
