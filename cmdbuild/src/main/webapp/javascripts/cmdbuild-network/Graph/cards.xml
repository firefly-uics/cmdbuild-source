<DATA>
	<params>
		<type>div</type>
	</params>
		<button id="selectCards" text="Only selected">
			<onClick>
				<command>tab</command>
				<form>commandPanelMain</form>
				<activeTab>4</activeTab>
			</onClick>
		</button>
	<div id="cardsFormContainer">
		<onInit>
			<command>navigate</command>
			<container>cardsFormContainer</container>
			<form>cardsForm</form>
		</onInit>
		<form id="cardsForm">
 			<params>
				<type>cardsGrid</type>
				<backend>CardsNavigation</backend>
				<nRows>9</nRows>
				<hookSelection>true</hookSelection>
			</params>
				<onChange>
					<command>selectNode</command>
					<node>$cardsForm.id</node>
				</onChange>
				<onDblClick>
					<command>zoomOn</command>
					<node>$cardsForm.id</node>
				</onDblClick>
			<rowButton id="zoom" tooltip="Zoom on Card">
				<onClick>
					<command>zoomOn</command>
					<node>$cardsForm.id</node>
				</onClick>
			</rowButton>
		</form>
	</div>
</DATA>
