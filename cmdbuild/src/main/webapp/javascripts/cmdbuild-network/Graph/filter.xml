<DATA>
	<params>
		<type>popup</type>
		<title>Filters</title>
	</params>
	<div id="filterDiv">
		<onInit>
			<command>navigate</command>
			<container>filterDiv</container>
			<form>filtersPanelMain</form>
		</onInit>
		<form id="filtersPanelMain">
 			<params>
				<type>tabbed</type>
			</params>
			<form title="Classes" id="filterClasses" include="filterByClass.xml" class="commandPanelWindow cmdbuildTabbedForm"/>
			<form title="Domains" id="filterDomains" include="filterByDomain.xml" class="commandPanelWindow cmdbuildTabbedForm"/>
		</form>
	</div>
	<div class='cmdbuildFooterButtonsWrapper'>
		<button text="Ok" id="okOptionsDialogButton">
			<onClick>
				<command>applyFilters</command>
				<dialog>commandPanelDialog</dialog>
				<filterByClass>filterByClassForm</filterByClass>
				<filterByDomain>filterByDomainForm</filterByDomain>
			</onClick>
		</button>
	</div>
</DATA>
