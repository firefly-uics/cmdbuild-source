<DATA>
	<div id="options">
		<onInit>
			<command>initOptions</command>
		</onInit>
		<checkbox id="nodesTooltip" label="Tooltip for entities" text="true">
			<onClick>
				<command>boolean</command>
				<type>nodesTooltip</type>
			</onClick>
		</checkbox>
		<checkbox id="edgesTooltip" label="Tooltip for relations" text="true">
			<onClick>
				<command>boolean</command>
				<type>edgesTooltip</type>
			</onClick>
		</checkbox>
		<spinner label="Explosion levels" id="explosionLevels" class="optionsSpinner">
			<params>
				<backend>Options</backend>
				<type>explosionLevels</type>
				<value>1</value>
			</params>
			<onChange>
				<command>boolean</command>
				<type>explosionLevels</type>
			</onChange>
		</spinner>
		<select label="Labels" id="labels" class="optionsSelect">
			<params>
				<backend>Options</backend>
				<type>labels</type>
				<value>No labels</value>
			</params>
			<onChange>
				<command>boolean</command>
				<type>labels</type>
			</onChange>
		</select>
	</div>
</DATA>
