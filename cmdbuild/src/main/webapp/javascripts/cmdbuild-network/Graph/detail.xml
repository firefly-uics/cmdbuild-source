<DATA>
	<params>
		<type>div</type>
	</params>
		<button id="expandDetail" text="More details">
			<onClick>
				<command>tab</command>
				<form>commandPanelMain</form>
				<activeTab>3</activeTab>
			</onClick>
		</button>
 	<div id="cmdbuildDetail">
		<onInit>
			<command>navigate</command>
			<container>cmdbuildDetail</container>
			<form>formdetail</form>
			<fromObserving>true</fromObserving>
		</onInit>
		<form id="formdetail" class="cmdbuildCard">
 			<observe container="cmdbuildDetail">
				<dummy1>$selectedForm.dummy</dummy1> 
			</observe>
 			<params>
				<type>form</type>
				<backend>GraphCard</backend>
				<classId>$selectedForm.classId</classId>
				<cardId>$selectedForm.id</cardId>
				<readonly>true</readonly>
				<displayableInList>true</displayableInList>
				<noGroup>true</noGroup>
			</params>
		</form>
	</div>
	<div id="cmdbuildDetailRelations">
		<onInit>
			<command>navigate</command>
			<container>cmdbuildDetailRelations</container>
			<form>formdetailrelations</form>
			<fromObserving>true</fromObserving>
		</onInit>
		<form id="formdetailrelations" class="cmdbuildCard">
 			<observe container="cmdbuildDetailRelations">
				<dummy1>$selectedForm.dummy</dummy1> 
			</observe>
 			<params>
				<type>relationsGrid</type>
				<backend>OnGraphRelations</backend>
				<nRows>5</nRows>
				<classId>$selectedForm.classId</classId>
				<cardId>$selectedForm.id</cardId>
				<hookParent>true</hookParent>
			</params>
		</form>
	</div>
</DATA>
