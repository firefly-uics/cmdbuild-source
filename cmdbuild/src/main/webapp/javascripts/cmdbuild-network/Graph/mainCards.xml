<DATA>
	<params>
		<type>div</type>
	</params>
	<checkbox id="onlySelected" label="Only selected">
		<onClick>
			<command>switchOnSelected</command>
			<check>onlySelected</check>
			<form>mainCardsForm</form>
		</onClick>
	</checkbox>
	<div id="mainCardsFormContainer" class="allWidth">
		<onInit>
			<command>navigate</command>
			<container>mainCardsFormContainer</container>
			<form>mainCardsForm</form>
		</onInit>
		<form id="mainCardsForm" class="allWidth">
 			<params>
				<type>tabbed</type>
			</params>
			<form title="All cards" id="cardsGrid" include="cards.xml" class="commandPanelWindow cmdbuildTabbedForm"/>
			<form title="Selected" id="selectedGrid" include="selected.xml" class="commandPanelWindow cmdbuildTabbedForm"/> 
		</form>
	</div>
</DATA>
