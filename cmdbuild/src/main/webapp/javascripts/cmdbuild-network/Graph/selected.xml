<DATA>
	<params>
		<type>div</type>
	</params>
	<span class="layout toolbarButton" tooltip="Apply the current layout">
		<onClick>
			<command>tab</command>
			<form>cardlistform</form>
			<activeTab>0</activeTab>
		</onClick>
	</span>
	<div id="selectedFormContainer">
		<onInit>
			<command>navigate</command>
			<container>selectedFormContainer</container>
			<form>selectedForm</form>
		</onInit>
		<form id="selectedForm">
 			<params>
				<type>selectedGrid</type>
				<backend>SelectedNavigation</backend>
				<nRows>9</nRows>
			</params>
			<onDblClick>
					<command>zoomOn</command>
					<node>$selectedForm.id</node>
				</onDblClick>
			<rowButton id="zoom" tooltip="Zoom on Card">
				<onClick>
					<command>zoomOn</command>
					<node>$selectedForm.id</node>
				</onClick>
			</rowButton>
		</form>
	</div>
</DATA>
