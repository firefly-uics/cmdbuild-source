<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">

	<bean id="lockCardConfiguration"
		class="org.cmdbuild.logic.data.access.lock.DefaultLockCardConfiguration">
		<constructor-arg ref="cmdbuildProperties" />
	</bean>

	<bean id="emptyLockCardManager" class="org.cmdbuild.logic.data.access.lock.EmptyLockCard" />

	<bean id="memoryLockCardManager" class="org.cmdbuild.logic.data.access.lock.InMemoryLockCard">
		<constructor-arg ref="lockCardConfiguration" />
	</bean>

	<bean id="lockCardManagerFactory"
		class="org.cmdbuild.logic.data.access.lock.LockCardManagerFactory">
		<property name="cmdbuildProperties" ref="cmdbuildProperties" />
		<property name="emptyLockCard" ref="emptyLockCardManager" />
		<property name="inMemoryLockCard" ref="memoryLockCardManager" />
	</bean>

</beans>
