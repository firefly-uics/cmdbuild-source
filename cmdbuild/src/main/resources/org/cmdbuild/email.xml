<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">

	<bean id="mailApiFactory" class="org.cmdbuild.common.mail.DefaultMailApiFactory" />

	<bean id="subjectParser" class="org.cmdbuild.services.email.DefaultSubjectParser" />

	<bean id="emailPersistence" class="org.cmdbuild.services.email.DefaultEmailPersistence">
		<constructor-arg ref="dbDataView" />
		<constructor-arg ref="lookupStore" />
		<constructor-arg ref="subjectParser" />
	</bean>

	<bean id="emailService" class="org.cmdbuild.services.email.EmailService">
		<constructor-arg ref="emailProperties" />
		<constructor-arg ref="mailApiFactory" />
		<constructor-arg ref="emailPersistence" />
		<constructor-arg ref="subjectParser" />
	</bean>

</beans>
