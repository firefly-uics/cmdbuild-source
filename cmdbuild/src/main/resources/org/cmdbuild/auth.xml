<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">

	<bean id="authConf" class="org.cmdbuild.config.AuthProperties"
		factory-method="getInstance" />

	<bean id="dbAuthenticator" class="org.cmdbuild.auth.LegacyDBAuthenticator">
		<constructor-arg ref="dbDataView" />
	</bean>

	<bean id="casAuthenticator" class="org.cmdbuild.auth.CasAuthenticator">
		<constructor-arg ref="authConf" />
	</bean>

	<bean id="headerAuthenticator" class="org.cmdbuild.auth.HeaderAuthenticator">
		<constructor-arg ref="authConf" />
	</bean>

	<!-- Note: it can't be scope="session" because it's injected in the AuthenticationService 
		once, and it can't contain session beans <bean id="sessionStore" class="org.cmdbuild.???" 
		/> -->
	<bean id="sessionStore" class="org.cmdbuild.services.SessionVars" />

	<bean id="dbGroupFetcher" class="org.cmdbuild.privileges.DBGroupFetcher">
		<constructor-arg ref="dbDataView" />
	</bean>

	<!-- TODO: how? <bean id="operationUser" ... scope="session" /> -->
	<bean id="operationUser" factory-bean="sessionStore"
		factory-method="getUser" />

	<bean id="privilegeContext" factory-bean="operationUser"
		factory-method="getPrivilegeContext" />



	<bean id="authLogic" class="org.cmdbuild.logic.auth.AuthenticationLogic"
		scope="singleton">
		<constructor-arg ref="authService" />
	</bean>

	<bean id="authService" class="org.cmdbuild.auth.DefaultAuthenticationService"
		scope="singleton">
		<constructor-arg ref="authConf" />
		<property name="passwordAuthenticators">
			<list>
				<ref bean="dbAuthenticator" />
				<!-- ref bean="ldapAuthenticator"/ -->
			</list>
		</property>
		<property name="clientRequestAuthenticators">
			<list>
				<ref bean="headerAuthenticator" />
				<ref bean="casAuthenticator" />
			</list>
		</property>
		<property name="userFetchers">
			<list>
				<ref bean="dbAuthenticator" />
				<!-- ref bean="domainUserFetcher"/ -->
			</list>
		</property>
		<property name="groupFetcher" ref="dbGroupFetcher" />
		<property name="userStore" ref="sessionStore" />
	</bean>

</beans>
