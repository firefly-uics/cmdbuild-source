<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
	">

	<bean id="pg_driver" class="org.cmdbuild.dao.driver.postgres.PostgresDriver">
		<constructor-arg>
			<bean class="org.postgresql.ds.PGSimpleDataSource">
				<property name="serverName" value="localhost" />
				<property name="portNumber" value="10083" />
				<property name="user" value="test" />
				<property name="password" value="test" />
				<property name="databaseName" value="cmdbuild_test" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="mem_driver" class="org.cmdbuild.dao.driver.InMemoryDriver" />

	<bean id="pg_cached_driver" class="org.cmdbuild.dao.driver.CachingDriver">
		<constructor-arg>
			<ref bean="pg_driver"/>
		</constructor-arg>
	</bean>
</beans>
