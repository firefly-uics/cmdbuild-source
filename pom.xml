<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cmdbuild</groupId>
	<artifactId>cmdbuild-main</artifactId>
	<packaging>pom</packaging>
	<version>1.4.0-SNAPSHOT</version>
	<name>CMDBuild</name>
	<url>http://www.cmdbuild.org</url>
	<properties>
		<alfresco.version>2.1</alfresco.version>
		<commons-lang.version>2.6</commons-lang.version>
		<cuke4duke.version>0.4.3</cuke4duke.version>
		<cxf.version>2.3.3</cxf.version>
		<java.version>1.6</java.version>
		<jetty.version>7.3.1.v20110307</jetty.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<shark.version>2.3</shark.version>
		<spring.version>3.0.5.RELEASE</spring.version>
		<tomcat.version>6.0.29</tomcat.version>
		<tomcat-plugin.version>1.1</tomcat-plugin.version>
		<!-- Test -->
		<hamcrest.version>1.1</hamcrest.version>
		<jmock.version>2.5.1</jmock.version> <!-- hamcrest 1.1 junit 4.4 -->
		<junit.version>4.8.1</junit.version>
	</properties>
	<modules>
		<module>cmdbuild</module>
		<module>cmdbuild-dao</module>
		<module>cmdbuild-docs</module>
		<module>cmdbuild-graph</module>
		<module>cmdbuild-test</module>
		<module>cmdbuild-shark</module>
		<module>cmdbuild-ws-client</module>
	</modules>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-library</artifactId>
			<version>${hamcrest.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jmock</groupId>
			<artifactId>jmock-junit4</artifactId>
			<version>${jmock.version}</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.hamcrest</groupId>
					<artifactId>hamcrest-library</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.hamcrest</groupId>
					<artifactId>hamcrest-core</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>junit-dep</artifactId>
					<groupId>junit</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<showDeprecation>false</showDeprecation>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

