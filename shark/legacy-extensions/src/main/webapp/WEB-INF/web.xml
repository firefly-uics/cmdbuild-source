<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web
Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Shark Web Services</display-name>
  <servlet>
	<servlet-name>ActivityPerformerResolver</servlet-name>
	<servlet-class>org.cmdbuild.shark.util.ActivityPerformerResolverServlet</servlet-class>
	<init-param>
		<param-name>user</param-name><param-value>sharkUGM</param-value>
	</init-param>
	<init-param>
		<param-name>password</param-name><param-value>sharkUGM</param-value>
	</init-param>
	<load-on-startup>2</load-on-startup>
  </servlet>

  <servlet-mapping>
	<servlet-name>ActivityPerformerResolver</servlet-name>
	<url-pattern>/ActivityPerformerResolver</url-pattern>
  </servlet-mapping>
</web-app>
